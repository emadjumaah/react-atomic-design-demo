{
  "compilerOptions": {
    "target": "esnext",
    "jsx": "react",
    "moduleResolution": "node",
    "module": "es6",
    "allowSyntheticDefaultImports": true,
    "lib": ["dom", "es2017", "dom.iterable", "scripthost"],
    "noImplicitAny": true,
    "baseUrl": ".",
    "paths": {
      "*": ["*", "app/*"],
      "elements": ["./app/elements"],
      "compounds": ["./app/compounds"],
      "hooks": ["./app/hooks"],
      "modules": ["./app/modules"],
      "layouts": ["./app/layouts"],
      "page-modules": ["./app/page-modules"],
      "config": ["./app/config"],
      "types": ["./app/types"],
      "utils": ["./app/utils"],
      "static": ["./static"],
      "pages": ["./pages"]
    },
    "noUnusedLocals": true,
    "sourceMap": true,
    "plugins": []
  },
  "compileOnSave": true,
  "exclude": ["node_modules"]
}
